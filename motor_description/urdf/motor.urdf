  <link name="rotor">
    <visual>
      <geometry>
        <cylinder length="0.055" radius="0.009"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.055" radius="0.009"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.01"/>
    </inertial>
	</link>

	<joint name="fixe_base" type="fixed">
		<parent link="world"/>
		<child link="base_link"/>
		<origin xyz="0 0 0.005"/>
	</joint>

<!--	<joint name="motor_axis" type="continuous">
		<parent link="base_link"/>
		<child link="rotor"/>
