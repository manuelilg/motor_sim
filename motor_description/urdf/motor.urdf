<?xml version="1.0"?>
<robot name="motor">
	
	<link name="world"/>

	<link name="base_link">
		<visual>
			<geometry>
				<box size="0.1 0.1 0.01"/>
				<origin xyz="0 0 0.01"/>
			</geometry>
		</visual>
		<collision>
			<geometry>
				<box size="0.1 0.1 0.01"/>
        <origin xyz="0 0 0.01"/>
			</geometry>
		</collision>
		<inertial>
			<mass value="0.1"/>
			<inertia ixx="1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.001"/>
		</inertial>
	</link>

